# ============================================
# ADDITIONAL CONFIGURATION FOR API
# ============================================

# Allow PUT, PATCH, DELETE methods (for mod_security compatibility)
<Limit PUT PATCH DELETE>
    Require all granted
</Limit>

# Disable mod_security for API routes (if needed)
# Uncomment these lines if mod_security is blocking legitimate API requests
# <IfModule mod_security.c>
#     SecRuleRemoveById 300015 300016 300017
#     # Or disable entirely for this directory (use with caution):
#     # SecFilterEngine Off
#     # SecFilterScanPOST Off
# </IfModule>

# Enable CORS for API endpoints (additional layer)
<IfModule mod_headers.c>
    # Allow requests from any origin (adjust as needed for production)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header set Access-Control-Allow-Credentials "true"
    
    # Handle preflight OPTIONS requests
    <IfModule mod_rewrite.c>
        RewriteEngine On
        RewriteCond %{REQUEST_METHOD} OPTIONS
        RewriteRule ^(.*)$ $1 [R=200,L]
    </IfModule>
</IfModule>

