// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// Seed script configuration
// Run with: npm run seed

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model user {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @unique @db.VarChar(8)
  email       String?  @unique
  pin         String // Hashed 4-digit PIN
  name        String
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cartItems         cartitem[]
  orders            order[]
  addresses         address[]
  favorites         favorite[]
  createdCategories category[] @relation("CategoryCreatedBy")
  updatedCategories category[] @relation("CategoryUpdatedBy")
  createdProducts   product[]  @relation("ProductCreatedBy")
  updatedProducts   product[]  @relation("ProductUpdatedBy")
  createdFeatures   feature[]  @relation("FeatureCreatedBy")
  updatedFeatures   feature[]  @relation("FeatureUpdatedBy")
  createdBanners    banner[]   @relation("BannerCreatedBy")
  updatedBanners    banner[]   @relation("BannerUpdatedBy")
  performedOrderActivities orderactivity[]

  @@map("user")
}

model category {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  @db.Text
  parentId    Int?
  order       Int      @default(0) // Order/position of category (lower = shows first)
  createdBy   Int? // Admin user ID who created this category
  updatedBy   Int? // Admin user ID who last updated this category
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent   category?         @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: Cascade)
  children category[]        @relation("CategoryToCategory")
  products productcategory[]
  creator  user?             @relation("CategoryCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  updater  user?             @relation("CategoryUpdatedBy", fields: [updatedBy], references: [id], onDelete: SetNull)

  @@unique([name, parentId])
  @@index([parentId])
  @@index([parentId, order]) // Index for efficient sorting by parent and order
  @@index([createdBy])
  @@index([updatedBy])
  @@map("category")
}

model product {
  id                 Int      @id @default(autoincrement())
  name               String
  description        String   @db.Text
  price              Decimal  @db.Decimal(10, 2)
  originalPrice      Decimal? @db.Decimal(10, 2) // Original price before discount (if null, no discount)
  images             Json? // JSON array of image URLs
  stock              Int      @default(0)
  isHidden           Boolean  @default(false) // If true, product is hidden from public view
  classificationCode String?  @db.VarChar(50) @map("classification_code") // e.g. HS/tax classification code
  vatAmount          Decimal? @db.Decimal(10, 2) @map("vat_amount") // VAT amount for the product
  deletedAt          DateTime? // Soft delete timestamp - if set, product is considered deleted
  createdBy          Int? // Admin user ID who created this product
  updatedBy          Int? // Admin user ID who last updated this product
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  categories  productcategory[]
  features    productfeature[]
  cartItems   cartitem[]
  orderItems  orderitem[]
  favorites   favorite[]
  draftOrders draftorder[]
  creator     user?             @relation("ProductCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  updater     user?             @relation("ProductUpdatedBy", fields: [updatedBy], references: [id], onDelete: SetNull)

  @@index([createdBy])
  @@index([updatedBy])
  @@index([deletedAt]) // Index for efficient filtering of non-deleted products
  @@map("product")
}

model feature {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  @db.Text
  order       Int      @default(0) // Display order (lower = shows first)
  createdBy   Int? // Admin user ID who created this feature
  updatedBy   Int? // Admin user ID who last updated this feature
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products productfeature[]
  creator  user?             @relation("FeatureCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  updater  user?             @relation("FeatureUpdatedBy", fields: [updatedBy], references: [id], onDelete: SetNull)

  @@unique([name])
  @@index([order])
  @@index([createdBy])
  @@index([updatedBy])
  @@map("feature")
}

model cartitem {
  id           Int      @id @default(autoincrement())
  userId       Int? // Nullable for guest carts
  sessionToken String? // Session token for guest carts (multiple items per session via @@unique([sessionToken, productId]))
  productId    Int
  quantity     Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user    user?   @relation(fields: [userId], references: [id])
  product product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
  @@unique([sessionToken, productId])
  @@index([sessionToken])
  @@index([userId])
  @@map("cartitem")
}

model order {
  id               String    @id @db.VarChar(9) // Custom format: YYMMDDNNN (e.g., 260126001)
  userId           Int? // Nullable for guest orders
  addressId        Int?
  deliveryTimeSlot String?   @db.VarChar(5)
  deliveryDate     DateTime? // Expected delivery date
  totalAmount      Decimal   @db.Decimal(10, 2)
  status           String    @default("PENDING")
  // Contact info from order create form (contact section)
  contactFullName    String?  @db.VarChar(255)
  contactPhoneNumber String?  @db.VarChar(8)
  contactEmail       String?  @db.VarChar(255)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // QPAY Payment fields
  qpayInvoiceId String?   @db.VarChar(255)
  qpayPaymentId String?   @db.VarChar(255)
  qpayQrText    String?   @db.Text // QR code text/URL from QPAY
  qpayQrCode    String?   @db.LongText // QR code base64 image from QPAY (preferred over regenerating)
  qpayAccessToken    String?   @db.Text // Reused for ebarimt-from-invoice so same token as invoice create
  qpayTokenExpiresAt DateTime? // When the token expires (use same token for ebarimt/create)
  paymentStatus String    @default("PENDING") @db.VarChar(50)
  paymentMethod String?   @db.VarChar(50)
  paidAt        DateTime?
  discordPaymentNotifiedAt DateTime? // Set when Discord payment notification sent (prevents duplicate notifications)
  ebarimtId     String?   @db.VarChar(255)
  ebarimtReceiptUrl String? @db.VarChar(1024) // QPay receipt URL for printing
  // Persist first ebarimt response fields (QPay often returns these only on create)
  ebarimtReceiptId String? @db.VarChar(255) // ebarimt_receipt_id / bill id
  ebarimtQrData    String? @db.LongText // ebarimt_qr_data (can be long numeric string)
  ebarimtLottery   String? @db.VarChar(50) // ebarimt_lottery (e.g. "RA 31372032")
  ebarimtStatus    String? @db.VarChar(50) // ebarimt_status / barimt_status
  ebarimtAmount    String? @db.VarChar(50) // Total amount from QPay ebarimt response
  ebarimtVatAmount String? @db.VarChar(50) // VAT amount from QPay ebarimt response
  ebarimtCityTaxAmount String? @db.VarChar(50) // City tax from QPay ebarimt response

  // Guest orders: session token to allow GET /orders/:id with X-Session-Token
  sessionToken String?   @db.VarChar(255)

  user    user?       @relation(fields: [userId], references: [id])
  address address?    @relation(fields: [addressId], references: [id])
  items   orderitem[]
  activities orderactivity[]

  @@index([userId])
  @@index([sessionToken])
  @@index([status])
  @@index([addressId])
  @@index([deliveryTimeSlot])
  @@index([paymentStatus])
  @@index([qpayInvoiceId])
  @@index([qpayPaymentId])
  @@map("order")
}

model orderactivity {
  id          Int      @id @default(autoincrement())
  orderId     String   @db.VarChar(9)
  type        String   @db.VarChar(50)   // STATUS_CHANGED, PAYMENT_STATUS_CHANGED, MESSAGE_SENT, ORDER_CREATED
  title       String?  @db.VarChar(255)  // Short label for timeline UI
  description String?  @db.Text          // Optional longer description
  fromValue   String?  @db.VarChar(100)   // e.g. previous status
  toValue     String?  @db.VarChar(100)   // e.g. new status
  channel     String?  @db.VarChar(20)   // sms, email (for MESSAGE_SENT)
  performedBy Int?     // Admin user ID if applicable
  createdAt   DateTime @default(now())

  order     order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  performer user? @relation(fields: [performedBy], references: [id], onDelete: SetNull)

  @@index([orderId])
  @@index([orderId, createdAt])
  @@index([performedBy])
  @@map("orderactivity")
}

model address {
  id                 Int      @id @default(autoincrement())
  userId             Int? // Nullable for guest addresses
  label              String?
  fullName           String
  phoneNumber        String
  provinceOrDistrict String
  khorooOrSoum       String
  street             String?
  neighborhood       String?
  residentialComplex String?
  building           String?
  entrance           String?
  apartmentNumber    String?
  addressNote        String?  @db.Text
  isDefault          Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user   user?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders order[]

  @@index([userId])
  @@index([userId, isDefault])
  @@map("address")
}

model orderitem {
  id        Int      @id @default(autoincrement())
  orderId   String   @db.VarChar(9) // References order.id (custom format: YYMMDDNNN)
  productId Int
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order   order   @relation(fields: [orderId], references: [id])
  product product @relation(fields: [productId], references: [id])

  @@map("orderitem")
}

model favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())

  user    user    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@map("favorite")
}

model productcategory {
  id         Int      @id @default(autoincrement())
  productId  Int
  categoryId Int
  order      Int      @default(0) // Order/position of product within this category (lower = shows first)
  createdAt  DateTime @default(now())

  product  product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([productId, categoryId])
  @@index([productId])
  @@index([categoryId])
  @@index([categoryId, order]) // Index for efficient sorting by category and order
  @@map("productcategory")
}

model productfeature {
  id        Int      @id @default(autoincrement())
  productId Int
  featureId Int
  order     Int      @default(0) // Order/position of product within this feature (lower = shows first)
  createdAt DateTime @default(now())

  product product @relation(fields: [productId], references: [id], onDelete: Cascade)
  feature feature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@unique([productId, featureId])
  @@index([productId])
  @@index([featureId])
  @@index([featureId, order])
  @@map("productfeature")
}

model banner {
  id           Int      @id @default(autoincrement())
  title        String?  @db.VarChar(255)
  description  String?  @db.Text
  imageDesktop String
  imageMobile  String
  linkUrl      String?  @db.VarChar(1024)
  order        Int      @default(0) // Display order (lower = shows first)
  isActive     Boolean  @default(true)
  startDate    DateTime?
  endDate      DateTime?
  createdBy    Int? // Admin user ID who created this banner
  updatedBy    Int? // Admin user ID who last updated this banner
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  creator user? @relation("BannerCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  updater user? @relation("BannerUpdatedBy", fields: [updatedBy], references: [id], onDelete: SetNull)

  @@index([isActive, order])
  @@index([createdBy])
  @@index([updatedBy])
  @@map("banner")
}

model draftorder {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique // Unique token to identify guest session
  productId    Int
  quantity     Int
  totalAmount  Decimal  @db.Decimal(10, 2)
  expiresAt    DateTime // Auto-expire draft orders after 24 hours
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  product product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
  @@index([expiresAt]) // For cleanup of expired drafts
  @@map("draftorder")
}

model otp {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @db.VarChar(8)
  code        String   @db.VarChar(6) // OTP code (4 digits for REGISTRATION, 6 digits for others)
  purpose     String   @db.VarChar(50) // e.g., 'REGISTRATION', 'LOGIN', 'PASSWORD_RESET'
  isUsed      Boolean  @default(false)
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([phoneNumber, code])
  @@index([phoneNumber, purpose])
  @@index([expiresAt]) // For cleanup of expired OTPs
  @@map("otp")
}
